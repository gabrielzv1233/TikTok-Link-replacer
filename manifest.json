{
    "manifest_version": 3,
    "name": "TikTok Link Replacer",
    "version": "1.3",
    "description": "Replaces TikTok links with custom text and link templates.",
    "permissions": [
      "storage",
      "scripting",
      "tabs",
      "activeTab",
      "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  